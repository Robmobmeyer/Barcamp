<p id="notice"><%= notice %></p>

<h1>
  <%= @conference.name %>
</h1>

<p>
  <b>organized from:</b>
  <%= @conference.organizer %>
</p>
<p>
  <b>Start date:</b>
  <%= @conference.start_date %>
</p>
<p>
  <b>Start time:</b>
  <%= @conference.start_time.strftime('%H:%M:%S') %>
</p>

  
<%= link_to 'New Workshop', new_conference_workshop_path(conference_id: @conference.id) %> |
<%= link_to 'add Room', new_conference_room_path(conference_id: @conference.id) %>
<%= link_to 'Edit', edit_conference_path(@conference) %> |
<%= link_to 'Back', conferences_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Talker</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @workshops.each do |workshop| %>
  <tr>
    <td><%= workshop.name %></td>
    <td><%= workshop.talker %></td>
    <td><%= link_to 'Show', conference_workshop_path(@conference, id: workshop.id) %></td>
    <td><%= link_to 'Edit', edit_conference_workshop_path(@conference, id: workshop.id) %></td>
    <td><%= link_to 'Destroy', conference_workshop_path(@conference, id: workshop.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<table>
    <tr>
      <th>Name</th>
      <th>Seats</th>
      <th>Floor</th>
    </tr>
<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.seat %></td>
    <td><%= room.floor %></td>
    <td><%= link_to 'Show', conference_room_path(@conference, id: room.id) %></td>
    <td><%= link_to 'Destroy', conference_room_path(@conference, id: room.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
